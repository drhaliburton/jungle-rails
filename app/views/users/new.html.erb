<h1>Register!</h1>

<%= form_for :user, url: '/users' do |f| %>
  First Name: <%= f.text_field :first_name, :required => true, :class => 'form-control' %><br>
  Last Name: <%= f.text_field :last_name, :required => true, :class => 'form-control' %><br>
  Email: <%= f.text_field :email, :required => true, :class => 'form-control' %><br>
  Password: <%= f.password_field :password, :required => true, :class => 'form-control' %><br>
  Password Confirmation: <%= f.password_field :password_confirmation, :required => true, :class => 'form-control' %><br>
  <%= f.submit "Submit", :class => 'btn btn-submit' %>

<% end %>